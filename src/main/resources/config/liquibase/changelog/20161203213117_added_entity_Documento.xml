<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Documento.
    -->
    <changeSet id="20161203213117-1" author="jhipster">
        <createTable tableName="documento">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="titulo" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="resumo" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="data_criacao" type="date">
                <constraints nullable="true" />
            </column>
            
            <column name="status" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="tipo_documento" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="arquivo" type="longblob">
                <constraints nullable="true" />
            </column>
            <column name="arquivo_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
        <createTable tableName="documento_orientador">
            <column name="orientadors_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="documentos_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="documentos_id, orientadors_id" tableName="documento_orientador"/>
        
    </changeSet>
</databaseChangeLog>
